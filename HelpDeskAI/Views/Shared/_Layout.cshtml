<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HelpDeskAI</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/HelpDeskAI.styles.css" asp-append-version="true" />
    <script src="https://kit.fontawesome.com/8fad92caf1.js" crossorigin="anonymous"></script>
</head>
<body>
  
     
       <div class="container">
    <div class="sidebar">
       
       <ol style="list-style:none;"> 
           <li><a asp-controller="Home" asp-action="index">HelpDeskAI</a></li>
                <li>   <a asp-controller="" asp-action="">Settings</a></li>
                <li>  <a asp-controller="" asp-action="">Chat</a></li>
                <li>  <a asp-controller="" asp-action="">Support queue</a></li>
                @if (!User.Identity.IsAuthenticated)
                {
                    <li>  <a asp-controller="auth" asp-action="login">Log in</a></li>
                
                <li>  <a asp-controller="auth" asp-action="register">Sign up</a></li>
                }
                else{
                <li>  <a asp-controller="auth" asp-action="logout">Log out</a></li>
                }
            </ol>     
    </div>
        <div
        <main role="main" class="pb-3">
                @RenderBody()
        </main>
    </div>
  </div>
  


    <footer>
    <p style="color:black;">&copy; 2024 Helpdeskai | <a href="/privacy-policy">Privacy Policy</a></p>
  </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/6.0.1/signalr.min.js"></script>
    <script src="~/signalr/hubs"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
